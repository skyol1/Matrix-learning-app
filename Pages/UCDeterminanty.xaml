<UserControl x:Class="MaticeApp.UCDeterminanty"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaticeApp"
             mc:Ignorable="d" 
             d:Background="#FFE6E6E6"
             d:DesignHeight="4000" d:DesignWidth="800">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Margin="8,10,10,50">

                <TextBlock FontSize="30" HorizontalAlignment="Left" Width="770" TextAlignment="Center">
                <Bold>Determinanty</Bold>
                </TextBlock>

                <TextBlock TextWrapping="Wrap" Margin="0,10,0,0">
                    Determinant je skalárna hodnota, ktorá je priradená ku štvorcovej matici 
                    a poskytuje dôležité informácie o tejto matici, ako aj o lineárnej transformácii, 
                    ktorú matica reprezentuje. Determinant môže byť použitý na zisťovanie inverzibility matice, 
                    objem transformácie a riešenie sústav lineárnych rovníc.
                </TextBlock>

                <TextBlock FontSize="24" Margin="0,10,0,10">
                    <Bold>Definícia</Bold>
                </TextBlock>

                <TextBlock TextWrapping="Wrap">
                    Determinantom štvorcovej matice <Run FontWeight="SemiBold">A</Run> = 
                    (<Italic>a<Run BaselineAlignment="Subscript" Text="ij" FontSize="14" /></Italic>) 
                    stupna <Italic>n</Italic> je číslo |<Run FontWeight="SemiBold">A</Run>|, pre ktoré platí:
                </TextBlock>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,0">
                        1.
                    </TextBlock>

                    <TextBlock Grid.Row="0" Grid.Column="1">
                        <Italic>n</Italic> = 1: |<Run FontWeight="SemiBold">A</Run>| =
                        <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">11</Run>
                    </TextBlock>

                    <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,0">
                        2.
                    </TextBlock>

                    <TextBlock Grid.Row="1" Grid.Column="1">
                        <Italic>n</Italic> = 2: |<Run FontWeight="SemiBold">A</Run>| =
                        <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">11</Run> ⋅
                        <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">22</Run> -
                        <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">12</Run> ⋅
                        <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">21</Run>
                    </TextBlock>

                    <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,10,0">
                        3.
                    </TextBlock>

                    <StackPanel Grid.Row="2" Grid.Column="1">
                        <TextBlock>
                            <Italic>n</Italic> > 1:
                        </TextBlock>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Margin="0,0,10,0" Text="3.1."/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,0,0,5">
                                Rozvoj podľa 1-ho riadku: <LineBreak/>
                                <InlineUIContainer>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,3">
                                            |<Run FontWeight="SemiBold">A</Run>| =
                                        </TextBlock>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="16" FontStyle="Italic" Text="n" Margin="0,0,0,-5"/>
                                            <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="25" FontWeight="Light" Text="∑">
                                                <TextBlock.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform ScaleX="2" ScaleY="1.5"/>
                                                        <TranslateTransform X="-8" Y="-11"/>
                                                    </TransformGroup>
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                            <TextBlock Grid.Row="2" FontSize="16" HorizontalAlignment="Center" Margin="0,1,0,0">
                                                <Italic>j</Italic>=1
                                            </TextBlock>
                                        </Grid>
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                                            (-1)<Run Text="1+" BaselineAlignment="TextTop" FontSize="14"/><Run Text="j" BaselineAlignment="TextTop" FontSize="14" FontStyle="Italic"/> ⋅
                                            <Italic>a</Italic><Run Text="1" BaselineAlignment="Subscript" FontSize="14"/><Run Text="j" BaselineAlignment="Subscript" FontSize="14" FontStyle="Italic"/> ⋅
                                            |<Run FontWeight="SemiBold">A</Run><Run Text="1" BaselineAlignment="Subscript" FontSize="14"/><Run Text="j" BaselineAlignment="Subscript" FontStyle="Italic" FontSize="14"/>| =
                                        </TextBlock>
                                    </Grid>
                                </InlineUIContainer> <LineBreak/>
                                = <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">11</Run>|<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" FontSize="14">11</Run>| -
                                <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">12</Run>|<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" FontSize="14">12</Run>| +
                                <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">13</Run>|<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" FontSize="14">13</Run>|
                                - ... +
                                (-1)<Run BaselineAlignment="TextTop" FontStyle="Italic" FontSize="14">n</Run><Run BaselineAlignment="TextTop" FontSize="14">+1</Run>
                                <Italic>a</Italic><Run BaselineAlignment="Subscript" FontSize="14">1</Run><Run BaselineAlignment="Subscript" FontStyle="Italic" FontSize="14">n</Run>|<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" FontSize="14">1</Run><Run BaselineAlignment="Subscript" FontStyle="Italic" FontSize="14">n</Run>|
                            </TextBlock>
                            <TextBlock Grid.Row="1" Grid.Column="0" Margin="0,0,10,0" Text="3.2."/>
                            <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,0,0,5">
                                Rozvoj podľa <Italic>i</Italic>-teho riadku: <LineBreak/>
                                <InlineUIContainer>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,3">
                                            |<Run FontWeight="SemiBold">A</Run>| =
                                        </TextBlock>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="16" FontStyle="Italic" Text="n" Margin="0,0,0,-5"/>
                                            <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="25" FontWeight="Light" Text="∑">
                                                <!-- Change the size and move using rendering -->
                                                <TextBlock.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform ScaleX="2" ScaleY="1.5"/>
                                                        <TranslateTransform X="-8" Y="-11"/>
                                                    </TransformGroup>
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                            <TextBlock Grid.Row="2" FontSize="16" HorizontalAlignment="Center" Margin="0,1,0,0">
                                                <Italic>j</Italic>=1
                                            </TextBlock>
                                        </Grid>
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                                            (-1)<Run BaselineAlignment="TextTop" FontSize="14" FontStyle="Italic">i+j</Run> ⋅
                                            <Italic>a<Run BaselineAlignment="Subscript" Text="ij" FontSize="14" /></Italic> ⋅
                                            |<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" Text="ij" FontStyle="Italic" FontSize="14" />| =
                                        </TextBlock>
                                    </Grid>
                                </InlineUIContainer> <LineBreak/>
                                = (-1)<Run BaselineAlignment="TextTop" FontSize="14" FontStyle="Italic">i</Run><Run BaselineAlignment="TextTop" FontSize="14">+1</Run> ⋅
                                <Italic>a<Run BaselineAlignment="Subscript" Text="i" FontSize="14" /></Italic><Run BaselineAlignment="Subscript" Text="1" FontSize="14" /> ⋅
                                |<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" Text="i" FontStyle="Italic" FontSize="14" /><Run BaselineAlignment="Subscript" Text="1" FontSize="14" />| +
                                (-1)<Run BaselineAlignment="TextTop" FontSize="14" FontStyle="Italic">i</Run><Run BaselineAlignment="TextTop" FontSize="14">+2</Run> ⋅
                                <Italic>a<Run BaselineAlignment="Subscript" Text="i" FontSize="14" /></Italic><Run BaselineAlignment="Subscript" Text="2" FontSize="14" /> ⋅
                                |<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" Text="i" FontStyle="Italic" FontSize="14" /><Run BaselineAlignment="Subscript" Text="2" FontSize="14" />| + ... +
                                (-1)<Run BaselineAlignment="TextTop" FontSize="14" FontStyle="Italic">i+j</Run> ⋅
                                <Italic>a<Run BaselineAlignment="Subscript" Text="ij" FontSize="14" /></Italic> ⋅
                                |<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" Text="ij" FontStyle="Italic" FontSize="14" />|
                            </TextBlock>
                            <TextBlock Grid.Row="2" Grid.Column="0" Margin="0,0,10,0" Text="3.3."/>
                            <TextBlock Grid.Row="2" Grid.Column="1">
                                Rozvoj podľa <Italic>j</Italic>-teho stĺpca: <LineBreak/>
                                <InlineUIContainer>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="0,0,5,3">
                                            |<Run FontWeight="SemiBold">A</Run>| =
                                        </TextBlock>
                                        <Grid Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock Grid.Row="0" HorizontalAlignment="Center" FontSize="16" FontStyle="Italic" Text="n" Margin="0,0,0,-5"/>
                                            <TextBlock Grid.Row="1" HorizontalAlignment="Center" FontSize="25" FontWeight="Light" Text="∑">
                                                <!-- Change the size and move using rendering -->
                                                <TextBlock.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform ScaleX="2" ScaleY="1.5"/>
                                                        <TranslateTransform X="-8" Y="-11"/>
                                                    </TransformGroup>
                                                </TextBlock.RenderTransform>
                                            </TextBlock>
                                            <TextBlock Grid.Row="2" FontSize="16" HorizontalAlignment="Center" Margin="0,1,0,0">
                                                <Italic>i</Italic>=1
                                            </TextBlock>
                                        </Grid>
                                        <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="5,0,0,0">
                                            (-1)<Run BaselineAlignment="TextTop" FontSize="14" FontStyle="Italic">i+j</Run> ⋅
                                            <Italic>a<Run BaselineAlignment="Subscript" Text="ij" FontSize="14" /></Italic> ⋅
                                            |<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" Text="ij" FontStyle="Italic" FontSize="14" />| =
                                        </TextBlock>
                                    </Grid>
                                </InlineUIContainer> <LineBreak/>
                                = (-1)<Run BaselineAlignment="TextTop" FontSize="14">1</Run><Run BaselineAlignment="TextTop" FontStyle="Italic" FontSize="14">+j</Run> ⋅
                                <Italic>a</Italic><Run BaselineAlignment="Subscript" Text="1" FontSize="14"/><Run BaselineAlignment="Subscript" FontStyle="Italic" Text="j" FontSize="14" /> ⋅
                                |<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" Text="1" FontSize="14" /><Run BaselineAlignment="Subscript" FontStyle="Italic" Text="j" FontSize="14" />| +
                                (-1)<Run Text="2" BaselineAlignment="TextTop" FontSize="14"/><Run Text="+j" BaselineAlignment="TextTop" FontStyle="Italic" FontSize="14"/> ⋅
                                <Italic>a</Italic><Run BaselineAlignment="Subscript" Text="2" FontSize="14"/><Run BaselineAlignment="Subscript" FontStyle="Italic" Text="j" FontSize="14" /> ⋅
                                |<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" Text="2" FontSize="14" /><Run BaselineAlignment="Subscript" FontStyle="Italic" Text="j" FontSize="14" />| + ... +
                                (-1)<Run BaselineAlignment="TextTop" FontSize="14" FontStyle="Italic">i+j</Run> ⋅
                                <Italic>a<Run BaselineAlignment="Subscript" Text="ij" FontSize="14" /></Italic> ⋅
                                |<Run FontWeight="SemiBold">A</Run><Run BaselineAlignment="Subscript" Text="ij" FontStyle="Italic" FontSize="14" />|
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                </Grid>

                <TextBlock FontWeight="Bold" FontSize="24" Margin="0,10,0,0">
                    Príklad:
                </TextBlock>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="1." Grid.Row="0" Grid.Column="0" Margin="0,0,10,0"/>

                    <TextBlock Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                        <Italic>n</Italic> = 1: <LineBreak/>
                        <Run Text="A" FontWeight="SemiBold"/> =
                        <InlineUIContainer BaselineAlignment="Center">
                            <local:Matrix x:Name="matrix1" Margin="3,5,15,0"/>
                        </InlineUIContainer>
                        |<Run Text="A" FontWeight="SemiBold"/>| = a<Run Text="11" BaselineAlignment="Subscript" FontSize="14"/> = 5
                    </TextBlock>

                    <TextBlock Text="2." Grid.Row="1" Grid.Column="0" Margin="0,0,10,0"/>

                    <TextBlock Grid.Row="1" Grid.Column="1" Margin="0,0,0,10">
                        <Italic>n</Italic> = 2: <LineBreak/>
                        <Run Text="A" FontWeight="SemiBold"/> =
                        <InlineUIContainer BaselineAlignment="Center">
                            <local:Matrix x:Name="matrix2" Margin="3,5,15,0"/>
                        </InlineUIContainer>
                        |<Run Text="A" FontWeight="SemiBold"/>| =
                        (a<Run Text="11" BaselineAlignment="Subscript" FontSize="14"/> ⋅ a<Run Text="22" BaselineAlignment="Subscript" FontSize="14"/>) -
                        (a<Run Text="12" BaselineAlignment="Subscript" FontSize="14"/> ⋅ a<Run Text="21" BaselineAlignment="Subscript" FontSize="14"/>) =
                        (1 ⋅ 4) - (2 ⋅ 3) = -2
                    </TextBlock>
                    
                    <TextBlock Text="3." Grid.Row="2" Grid.Column="0" Margin="0,0,10,0"/>

                    <StackPanel Grid.Row="2" Grid.Column="1" Margin="0,0,0,10">
                        <TextBlock>
                            <Italic>n</Italic> = 3 (jednoduchý spôsob - platí len pre 3×3):
                        </TextBlock>
                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock VerticalAlignment="Center" Margin="5,0,10,0">
                                <Run Text="A" FontWeight="SemiBold"/> =
                            </TextBlock>
                            <local:Matrix Grid.Column="1" x:Name="matrix3_0"/>
                            <TextBlock Grid.Column="2" Margin="20,0,0,0" TextWrapping="Wrap">
                                Prvé dva riadky skopírujeme pod matricu. <LineBreak/>
                                Sčítame násobky prvkov na troch hlavných diagonálach <LineBreak/>
                                A odpočítame násobky prvkov na troch vedľajších diagonálach.
                            </TextBlock>
                        </Grid>
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,0">
                                |<Run Text="A" FontWeight="SemiBold"/>| =
                            </TextBlock>
                            <local:Matrix Grid.Row="0" Grid.Column="1" x:Name="matrix3_1"/>
                            <local:Matrix Grid.Row="1" Grid.Column="1" x:Name="matrix3_2" HorizontalAlignment="Center"/>
                            <Canvas Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" x:Name="Canvas3"/>
                            <TextBlock Text="=" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
                            <Grid Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="50,0,0,0">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="1">
                                    {[1⋅3⋅(-4)] + [1⋅5⋅5] + [(-2)⋅(-1)⋅3]}
                                </TextBlock>
                                <TextBlock Text="-" Grid.Row="0" Grid.Column="2" Margin="5,0,0,0"/>
                                <TextBlock Text="-" Grid.Row="1" Grid.Column="0" Margin="0,0,5,0"/>
                                <TextBlock Grid.Row="1" Grid.Column="1">
                                    {[5⋅3⋅(-2)] + [3⋅5⋅1] + [(-4)⋅(-1)⋅1]}
                                </TextBlock>
                                <TextBlock Text="= 30" Grid.Row="1" Grid.Column="2" Margin="5,0,0,0"/>
                            </Grid>
                        </Grid>
                    </StackPanel>

                    <TextBlock Text="4." Grid.Row="3" Grid.Column="0" Margin="0,0,10,0"/>

                    <StackPanel Grid.Row="3" Grid.Column="1" Margin="0,0,0,10">
                        <TextBlock>
                            <Italic>n</Italic> = 4 (rozvoj podľa 1-ho riadku):
                        </TextBlock>
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0">
                                <Run Text="A" FontWeight="SemiBold"/> =
                            </TextBlock>
                            <local:Matrix Grid.Column="1" x:Name="matrix4_0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="15,0,0,0" TextWrapping="Wrap">
                                Každý prvok <Italic>a</Italic><Run Text="1" BaselineAlignment="Subscript" FontSize="14"/><Run 
                                    Text="j" BaselineAlignment="Subscript" FontStyle="Italic" FontSize="14"/> 
                                v prvom riadku vynásobíme determinantom podmatice 
                                <Run Text="A" FontWeight="SemiBold"/><Run Text="1" BaselineAlignment="Subscript" FontSize="14"/><Run 
                                    Text="j" BaselineAlignment="Subscript" FontStyle="Italic" FontSize="14"/> 
                                ktorú získame z pôvodnej matice <Run Text="A" FontWeight="SemiBold"/> odstránením riadku a stĺpca, 
                                v ktorom sa vybraný prvok nachádza
                                (<Italic>R</Italic><Run Text="1" BaselineAlignment="Subscript" FontSize="16"/><Run 
                                    Text="j" BaselineAlignment="Subscript" FontStyle="Italic" FontSize="14"/>).
                                <LineBreak/> Nezabúdame na striedavé znamienka.
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,8,0,0">
                                |<Run Text="A" FontWeight="SemiBold"/>| =
                            </TextBlock>
                            <local:Matrix Grid.Row="1" Grid.Column="1" x:Name="matrix4_1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,8,0,0">
                                = 1⋅|<Run Text="A" FontWeight="SemiBold"/><Run Text="11" BaselineAlignment="Subscript" FontSize="14"/>| -
                                5⋅|<Run Text="A" FontWeight="SemiBold"/><Run Text="12" BaselineAlignment="Subscript" FontSize="14"/>| +
                                2⋅|<Run Text="A" FontWeight="SemiBold"/><Run Text="13" BaselineAlignment="Subscript" FontSize="14"/>| -
                                3⋅|<Run Text="A" FontWeight="SemiBold"/><Run Text="14" BaselineAlignment="Subscript" FontSize="14"/>| =
                                30
                            </TextBlock>
                        </Grid>
                    </StackPanel>
                    
                    <TextBlock Text="5." Grid.Row="4" Grid.Column="0" Margin="0,0,10,0"/>

                    <StackPanel Grid.Row="4" Grid.Column="1" Margin="0,0,0,10">
                        <TextBlock>
                            <Italic>n</Italic> = 4 (rozvoj podľa <Italic>i</Italic>-teho riadku):
                        </TextBlock>
                        <Grid Margin="0,10,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0">
                                <Run Text="A" FontWeight="SemiBold"/> =
                            </TextBlock>
                            <local:Matrix Grid.Column="1" x:Name="matrix5_0" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            <TextBlock Grid.Column="2" VerticalAlignment="Center" Margin="15,0,0,0" TextWrapping="Wrap">
                                Podobný spôsob ako pri rozvoje podľa 1-ho riadku. <LineBreak/>
                                Znamienka sa tiež striedajú, ale už nemusia začínať plusom. <LineBreak/>
                                Ak by nejaký prvok v riadku bol nulový, potom môžeme nepočítať determinant podmatice, 
                                pretože po vynásobení z nulou dostaneme 0. Preto v tomto príklade si zvolíme riadok 3, v ktorom 
                                <Italic>a</Italic><Run Text="32" BaselineAlignment="Subscript" FontSize="14"/> = 0.
                            </TextBlock>

                            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,8,0,0">
                                |<Run Text="A" FontWeight="SemiBold"/>| =
                            </TextBlock>
                            <local:Matrix Grid.Row="1" Grid.Column="1" x:Name="matrix5_1" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,10,0,0"/>
                            <TextBlock Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="0,8,0,0">
                                = (-1)<Run BaselineAlignment="TextTop" FontSize="14" FontStyle="Italic">i+j</Run>⋅2⋅|<Run
                                    Text="A" FontWeight="SemiBold"/><Run Text="31" BaselineAlignment="Subscript" FontSize="14"/>| -
