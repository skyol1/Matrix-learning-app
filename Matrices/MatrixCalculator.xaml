<UserControl x:Class="MaticeApp.MatrixCalculator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MaticeApp"
             mc:Ignorable="d" 
             d:DesignHeight="2000" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0">Matrix Size</TextBlock>
            <TextBox Grid.Column="1" Width="30" Text="3" HorizontalAlignment="Left" Margin="5,5,5,5" TextChanged="TextBox_TextChanged"></TextBox>
            <Button Margin="50,0,0,0" Grid.Column="2" Width="300" x:Name="RandomizeButton" Click="RandomizeButton_Click">Randomize input Matrices</Button>
        </Grid>
        
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <local:InputMatrix Grid.Column="0" x:Name="matrix1"/>
                <TextBlock Grid.Column="1" x:Name="OperationSymbol" VerticalAlignment="Center" Margin="10,0,10,0">
                </TextBlock>
                <local:InputMatrix Grid.Column="2" x:Name="matrix2"/>
                <TextBlock Grid.Column="3" VerticalAlignment="Center" Margin="10,0,10,0">
                =
                </TextBlock>
                <local:Matrix Grid.Column="4" x:Name="matrix3" />
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
